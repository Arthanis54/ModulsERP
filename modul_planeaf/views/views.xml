<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	<record model="ir.actions.act_window" id="action_planeaf_aeroport_tree">
		<field name="name">Aeroport</field>
		<field name="res_model">planeaf.aeroport</field>
	</record>

	<record model="ir.actions.act_window" id="action_planeaf_vol_tree">
		<field name="name">Vol</field>
		<field name="res_model">planeaf.vol</field>
	</record>

	<record model="ir.actions.act_window" id="action_planeaf_pilot_tree">
		<field name="name">Pilot</field>
		<field name="res_model">planeaf.pilot</field>
	</record>

	<record model="ir.actions.act_window" id="action_planeaf_avio_tree">
		<field name="name">Avio</field>
		<field name="res_model">planeaf.avio</field>
	</record>

	<menuitem name="Plane" id="plane_menu1" />
	<menuitem name="Aeroport" parent="plane_menu1" id="plane_menu1_1" action="action_planeaf_aeroport_tree" />	
	<menuitem name="Vol" parent="plane_menu1" id="plane_menu1_2" action="action_planeaf_vol_tree" />	
	<menuitem name="Pilot" parent="plane_menu1" id="plane_menu1_3" action="action_planeaf_pilot_tree" />
	<menuitem name="Avio" parent="plane_menu1" id="plane_menu1_4" action="action_planeaf_avio_tree" />		

	<record model="ir.ui.view" id="view_planeaf_aeroport_tree">
		<field name="name">planeaf_aeroport</field>
		<field name="model">planeaf.aeroport</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Aeroport">
				<field name="codi"/>
				<field name="nom"/>
				<field name="imatge"/>
				<field name="ciutat"/>
				<field name="pais"/>
				<field name="latitud"/>
				<field name="longitud"/>				
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_planeaf_vol_tree">
		<field name="name">planeaf_vol</field>
		<field name="model">planeaf.vol</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Vol">
				<field name="codi"/>
				<field name="passatgers"/>
				<field name="dataSortida"/>
				<field name="dataArribada"/>				
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_planeaf_pilot_tree">
		<field name="name">planeaf_pilot</field>
		<field name="model">planeaf.pilot</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Pilot">
				<field name="codi"/>
				<field name="nom"/>
				<field name="cognoms"/>				
				<field name="nif"/>
				<field name="telf"/>
				<field name="email"/>				
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_planeaf_avio_tree">
		<field name="name">planeaf_avio</field>
		<field name="model">planeaf.avio</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Avio">
				<field name="codi"/>
				<field name="imatge"/>
				<field name="marca"/>				
				<field name="model"/>
				<field name="maxVel"/>				
			</tree>
		</field>
	</record>

	</data>
</odoo>
