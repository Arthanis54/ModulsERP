<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	<record model="ir.actions.act_window" id="action_zooaf_zoo_tree">
		<field name="name">Zoo</field>
		<field name="res_model">zooaf.zoo</field>
	</record>

	<record model="ir.actions.act_window" id="action_zooaf_animal_tree">
		<field name="name">Animal</field>
		<field name="res_model">zooaf.animal</field>
	</record>

	<record model="ir.actions.act_window" id="action_zooaf_especie_tree">
		<field name="name">Especie</field>
		<field name="res_model">zooaf.especie</field>
	</record>

	<menuitem name="Zoo" id="zoo_menu1" />
	<menuitem name="Zoo" parent="zoo_menu1" id="zoo_menu1_1" action="action_zooaf_zoo_tree" />	
	<menuitem name="Animal" parent="zoo_menu1" id="zoo_menu1_2" action="action_zooaf_animal_tree" />	
	<menuitem name="Especie" parent="zoo_menu1" id="zoo_menu1_3" action="action_zooaf_especie_tree" />		

	<record model="ir.ui.view" id="view_zooaf_zoo_tree">
		<field name="name">zooaf.zoo</field>
		<field name="model">zooaf.zoo</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Zoo">
				<field name="id"/>
				<field name="nom"/>
				<field name="grandaria"/>
				<field name="ciutat"/>
				<field name="pais"/>				
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_zooaf_animal_tree">
		<field name="name">zooaf.animal</field>
		<field name="model">zooaf.animal</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Animal">
				<field name="id"/>
				<field name="continentOrigen"/>
				<field name="dataNaix"/>
				<field name="paisOrigen"/>
				<field name="sexe"/>				
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_zooaf_especie_tree">
		<field name="name">zooaf.especie</field>
		<field name="model">zooaf.especie</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Especie">
				<field name="id"/>
				<field name="familia"/>
				<field name="nomCientific"/>				
				<field name="nomVulgar"/>
				<field name="perill"/>				
			</tree>
		</field>
	</record>

	</data>
</odoo>
